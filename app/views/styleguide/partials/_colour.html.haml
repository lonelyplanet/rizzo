.styleguide-block
  %h2.copy--h2.styleguide__subtitle #{group[:title][2..-1]}
  .js-card-container
    - group[:body].split(/\n/).each do |line|

      - unless line == "" || line.count("/^\$/") > 1

        - colour_pair = line.gsub(" !default", "").gsub(" ", "").split(':')
        .card.card--double.box{ data: { luminance: get_luminance(colour_pair[1]) } }
          .styleguide-block__item.styleguide-block__item--colour.copy--h2{style: "background-color: #{colour_pair[1]}", class: get_luminance(colour_pair[1]) > 200 ? "is-light" : "" }<
            = colour_pair[1]
          %h3.copy--feature.box<
            = colour_pair[0]