.wrapper--footer.js-wrapper
  = render 'layouts/core/snippets/body_footer', include_js: include_js
- if include_js
  .js-config.is-hidden
    = render 'layouts/core/inline_js/fs_init'
    = js_configuration
    %script{type: "text/javascript", async: true, src: "#{normalised_asset_path('requirejs/require.js')}", data: {main: "#{async_js_path("app_core_legacy")}"}}

    = render 'layouts/legacy/snippets/nav_tracking'

  -# This has to be outside 'is-hidden' for the interstitial. Temporary solution
  -# to be replaced by generic ad-serving solution
  = render 'layouts/legacy/snippets/wallpaper'
