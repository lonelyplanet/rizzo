%head
  %meta{name:"viewport", content:"width=device-width, initial-scale=1"}
  = render 'layouts/core/head', responsive: true, homepage: false
  = render 'layouts/mobile/grunticon'

  <!--[if gt IE 8]><!-->
  = render 'layouts/mobile/detect_touch'
  <![endif]-->

  = render 'layouts/mobile/require_js_config'
  = render 'layouts/mobile/require_js_async', script_name: "app_destinations_landing"

%body.responsive.copy--freight
  .wrapper
    = render 'layouts/core/snippets/accessibility'
    = render 'layouts/core/snippets/primary_navigation_bar', user_nav: true, responsive: true, homepage: false
    .row.row--content#js-row--content
      = yield

    .wrap--footer
      = render 'layouts/core/snippets/body_footer', responsive: true

    .js-config.is-hidden
      -# = render 'layouts/mobile/img_loader'
      = render 'layouts/core/snippets/fs_init'
      = render 'layouts/mobile/fonts_async'
      = render 'layouts/mobile/base_js_async'
      = js_configuration
      - unless Rails.env.production?
        :javascript
          window.appEnvironment = "#{Rails.env}";
      - if defined?($JS_VARS)
        :javascript
          #{js_hash($JS_VARS)}
      - if is_lp_office?(true_client_ip(request))
        :javascript
          window.lpOffice = true;
      = yield :scripts

    %div.ad-oneByOne#js-ad-oneByOne

    - if defined? Variant
      /
        = "build: #{Variant.full_namespace}"


