%head
  = render 'layouts/core/head'
  %meta{name:"viewport", content:"width=device-width, initial-scale=1"}
%body.responsive
  .wrap--footer-push
    = render 'layouts/core/snippets/responsive_header', :user_nav => defined?(user_nav) ? user_nav : true
    .row.row--content#js-row--content
      .row__inner.row__inner--content
        = yield
      .row--footer-push

  .wrap--footer
    = render 'layouts/core/responsive_footer'
  .js-config.is-hidden
    = render 'layouts/core/snippets/fs_init'
    = js_configuration
    - unless Rails.env.production?
      :javascript
        window.appEnvironment = "#{Rails.env}";
    - if defined?($JS_VARS)
      :javascript
        #{js_hash($JS_VARS)}
    - if is_lp_office?(true_client_ip(request))
      :javascript
        window.lpOffice = true;
    = yield :scripts
  
  %div.ad-oneByOne#js-ad-oneByOne

  - if defined? Variant
    /
      = "build: #{Variant.full_namespace}"


