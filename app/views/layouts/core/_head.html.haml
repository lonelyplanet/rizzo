%link{rel: "dns-prefetch", href:"http://assets.staticlp.com"}
%meta(charset='utf-8')
%meta(name="author" content='Lonely Planet')
%title
  = content_for?(:head_title) ? yield(:head_title) : 'Lonely Planet Travel Guides and Travel Information'
%meta{name: "description", content: content_for?(:meta_description) ? yield(:meta_description) : "Love travel? Plan and book your perfect trip with expert advice, travel tips, destination information and inspiration from Lonely Planet."}
%meta{name: "keywords", content: content_for?(:meta_keywords) ? yield(:meta_keywords) : "travel lonely planet" }

%meta(name="fb:app_id" content="111537044496")

- unless responsive
  %meta(name="viewport" content="width=1024")

= yield :dns_prefetch
= yield :meta
= csrf_meta_tags

= render 'layouts/core/snippets/head_js'

- if responsive
  = render 'layouts/mobile/cut_the_mustard'

  -# Some landing pages (best in travel) are still using the font icons so need the font up front
  -# We need to remove this post-SVG
  - if @font_icons == true
    = smart_stylesheet('common_core')
  - else
    = smart_stylesheet('common_core_no_font')
    = render 'layouts/mobile/fonts_loader'

- else
  = smart_stylesheet('common_core')
  = render 'layouts/core/snippets/tynt'

= yield :stylesheets
= yield :place_hotels_link

%link(rel="icon" type="image/gif" href="http://www.lonelyplanet.com/favicon.ico")
