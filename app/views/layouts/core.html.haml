= render 'layouts/core/doctype_declaration'

%head
  = render 'layouts/core/head', tynt: (defined?(tynt) ? tynt : true), include_js: true, responsive: false

%body
  = ui_component('lightbox')
  %script#tmpl-preloader{ type: 'text-mustache' }
    = ui_component('preloader')
  .wrapper.js-wrapper
    = render 'layouts/core/snippets/body_header', user_nav: true, include_js: true, nav_primary: true, search: true, responsive: false

    .row.row--content#js-row--content
      - if content_for?(:secondary)
        .row.row--secondary#js-secondary-nav
          = yield :secondary

      - if (yield :alerts).present?
        .row__inner.row--alerts
          = yield :alerts

      = yield

    .wrapper.wrapper--footer
      = yield :breadcrumbs
      = render 'layouts/core/snippets/body_footer', include_js: true

  = render 'layouts/core/snippets/pointer_cover'

  = render 'layouts/core/snippets/one_by_one'

  = render 'layouts/core/snippets/footer_js'
  
  - if defined? Variant
    /
      = "build: #{Variant.full_namespace}"
