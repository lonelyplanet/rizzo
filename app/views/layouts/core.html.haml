%head
  = render 'layouts/core/head', responsive: false, homepage: false
%body.copy--freight
  .wrap--footer-push
    = render 'layouts/core/snippets/body_header', user_nav: defined?(user_nav) ? user_nav : true

    .row.row--content#js-row--content
      .row__inner.row__inner--content
        
        - if content_for?(:secondary)
          .row.row--secondary#js-secondary-nav
            .row__inner.row__inner--secondary
              = yield :secondary
        
        = yield
      
      .row--footer-push

  .wrap--footer
    = yield :breadcrumbs
    = render 'layouts/core/snippets/body_footer'

  .js-config.is-hidden
    = render 'layouts/core/snippets/fs_init'
    = js_configuration
    - unless Rails.env.production?
      :javascript
        window.appEnvironment = "#{Rails.env}";
    - if defined?($JS_VARS)
      :javascript
        #{js_hash($JS_VARS)}
    - if is_lp_office?(true_client_ip(request))
      :javascript
        window.lpOffice = true;
    = yield :scripts
    = render 'layouts/core/snippets/google_analytics' if Rails.env.production?


  %div.ad-oneByOne#js-ad-oneByOne

  - if defined? Variant
    /
      = "build: #{Variant.full_namespace}"


