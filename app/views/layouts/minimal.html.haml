= render 'layouts/core/doctype_declaration'

%head
  = render 'custom_layouts/head', tynt: false, responsive: true, include_js: true, third_party: false, legacy_lp: false, app_core: false

%body.responsive.minimal
  .wrapper.js-wrapper

    .row--faux-banner
      %a.media--lp-logo.logo--header.icon--lp-logo.icon--white{ href: 'http://www.lonelyplanet.com', title: 'Return to homepage' }

    .row.row--content{ id: 'js-row--content' }

      - if (yield :alerts).present?
        .row.row--alerts
          .row__inner
            = yield :alerts

      = yield

    = render 'layouts/core/snippets/footer_js', third_party: false
