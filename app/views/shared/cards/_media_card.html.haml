- if stack_item.resized_image_url or stack_item.resized_video_url
  .card--single.card--media-container.js-card
    - if stack_item.resized_image_url
      %article.card.card--image-only.card--gallery
        %a.link--wrapper{href: stack_item.image_href, title: "Image Gallery"}
          %span.card--media__badge
          %figure.card__hero
            = safe_image_tag(stack_item.resized_image_url, class: 'portrait card__image', :alt => "Image Gallery")
          .card__content
            %h2.card__name.accessibility
              Image gallery
            %p
              = stack_item.image_description

    - if stack_item.resized_video_url
      %article.card.card--image-only.card--video
        %a.link--wrapper{href: stack_item.video_href, title: "Video Gallery"}
          %span.card--media__badge
          %figure.card__hero
            = safe_image_tag(stack_item.resized_video_url, class: 'portrait card__image', :alt => "Video Gallery")
          .card__content
            %h2.card__name.accessibility
              Video gallery
            %p
              = stack_item.video_description
