.split--left.row__title--secondary

  - if properties[:is_body_title] == true
    %h1.place-title.place-title-heading #{properties[:title]}

  - else
    .place-title{class: properties[:title].downcase == "world" ? "icon--world--before" : "icon--place--pin--before"}<
      - if properties[:no_place_link] == true
        %span.place-title-heading #{properties[:title]}
      - else
        %a.place-title-heading{href: "/#{properties[:slug]}"} #{properties[:title]}

      - if properties[:parent]
        %a.place-title__parent{href: "/#{properties[:parent_slug]}"}, #{properties[:parent]}
