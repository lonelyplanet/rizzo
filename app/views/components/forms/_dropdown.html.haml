.dropdown.js-select-group{ class: opts[:class] }
  %label.dropdown__value.js-select-overlay<
    = opts[:placeholder]
  %select.dropdown__select.js-select{ id: opts[:id], name: opts[:name], data: opts[:data] }
    - if opts[:prompt]
      %option{ value: "" }<
        = opts[:placeholder]
    - if opts[:grouped]
      = grouped_options_for_select(opts[:options], opts[:selected])
    - else
      = options_for_select(opts[:options], opts[:selected])
