%article.tile.tile--story
  %a.tile__link{ href: properties[:link_url] }
    .tile__wrapper
      .tile__media.tile__media--img
        = safe_image_tag(properties[:image_src], alt: properties[:image_alt])
      .tile__cover
        .tile__cover__content
          %h1.tile__cover__title
            = properties[:cover_title]
          .tile__cover__story
            != properties[:cover_content]