:ruby

  css_classes = [
    "card",
    "card--single",
    "card--quote"
  ].join(" ")

%article.js-card{class: css_classes}
  %a.link--wrapper.card__content.card__content__inner{href: properties[:slug]}
    %span.card__context
      = properties[:context] || "Thorntree"
    %blockquote.card__name{cite: properties[:slug]}
      = properties[:title]
    - if properties[:name].present?
      %footer.card__source
        = safe_image_tag(properties[:avatar], class: "card__avatar", alt: "Avatar of #{properties[:name]}", lazyload: defined?(lazyload))
        by
        %span.card__username
          = properties[:name]
