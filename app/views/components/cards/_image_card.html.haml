%article.card.card--mini.card--image-only
  %a.link--wrapper{href: properties[:url]}
    %span.card__icon.icon--image.icon--white
    %figure.card__hero
      = safe_image_tag(properties[:resized_image_url], class: 'portrait card__image', lazyload: defined?(lazyload))
    .card__content
      %h2.card__name.accessibility
        Image gallery
      %p
        = properties[:image_description]
