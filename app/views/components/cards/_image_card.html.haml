%article.card.card--image-only.card--gallery
  %a.link--wrapper{href: card[:url], title: "Image Gallery"}
    %span.card--media__badge.icon--image.icon--white
    %figure.card__hero
      = safe_image_tag(card[:resized_image_url], class: 'portrait card__image', alt: "Image Gallery", lazyload: defined?(lazyload))
    .card__content
      %h2.card__name.accessibility
        Image gallery
      %p
        = card[:image_description]
