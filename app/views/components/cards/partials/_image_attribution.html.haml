- icon_colour = card[:double?] ? "icon--white" : ""

.card__attribution.icon--image--before{class: icon_colour ? "#{icon_colour}--before" : ""}
  %span.card__attribution-link.js-card-attribution{ data: { link: card[:image_attribution_link] }}<
    = card[:image_attribution]
  %span.card__licenses
    - unless card[:image_license] == 'permission'
      %span.license.icon--cc{class: icon_colour}<
        Creative Commons
    %span.license.icon--by{class: icon_colour}<
      Attribution
    - if card[:image_license] == 'by-nd'
      %span.license.icon--nd{class: icon_colour}<
        Non-Derivation
    - if card[:image_license] == 'by-sa'
      %span.license.icon--sa{class: icon_colour}<
        Share Alike
